<!DOCTYPE html>
<html lang="en">
<head>
	  <title>Utilizatori</title>
    <%- include("../fragmente/head") %>
    <link rel="stylesheet" type="text/css" href="/Css-compilat/useri.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
	  <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
</head>
<body>

<header>
    <%- include("../fragmente/header") %>
</header>

<main class="light">
    <div class="afisaj">
        <h1>Useri</h1>

		<table id="profesori">
		  <tr>
            <th>Username</th>
            <th>Nume</th>
            <th>Prenume</th>
            <th>Blocat</th>
            <th>Optiune</th>
		  </tr>
		  <% for (var i = 0; i < useri.length; i++) { 
			    if (useri[i].Rol == "comun") { %>
				<tr>
				  <td><%= useri[i].Username %></td>
				  <td><%= useri[i].Nume %></td>
				  <td><%= useri[i].Prenume %></td>
				  <td><%= useri[i].Blocat %></td>
                  <td>
                    <form action="/blocheaza_utilizator" method="post">
                        <input type="hidden" value="<%= useri[i].Username %>" name="username">
                        <input type="hidden" value="<%= useri[i].Blocat %>" name="blocat">
                        <input type="hidden" value="<%= useri[i].Nume %>" name="nume"> 
                        <input type="hidden" value="<%= useri[i].Prenume %>" name="prenume">
                        <input type="hidden" value="<%= useri[i].Mail %>" name="email">  
                        <input type="submit" value="Blocheaza/Deblocheaza">
                    </form>
                  </td>
                </tr> 
				<% } %>			
		  <% } %>
		</table>
	</div>
</main>

<footer>
    <%- include("../fragmente/footer") %>
</footer>

</body>
</html>